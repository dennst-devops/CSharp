@{
    ViewData["Title"] = "Register";
}

@using LoginAndReg.Models
@model Thing
<br>
<div class="text-center">
    <h2>Register for this Cool Site!</h2>
</div>
<div class="text-right">
    <a href="/login">Login</a>
</div>

<div class="container">
    <form asp-action="create" asp-controller="Home" method="post">
    <div class="row">
        <div class="col-sm-4">
                <br><span asp-validation-for="FirstName"></span><br>
                <label asp-for="FirstName"></label>
            <br>
                <input asp-for="FirstName">
            <br>
                <br><span asp-validation-for="LastName"></span><br>
                <label asp-for="LastName"></label>
            <br>
                <input asp-for="LastName">
            <br>
                <br><span asp-validation-for="Email"></span><br>
                <label asp-for="Email"></label>
            <br>
                <input asp-for="Email">
                <br><br>
        </div>
        <div class="col-sm-4">
            <br><span asp-validation-for="Password"></span><br>
            <label asp-for="Password"></label>
            <br>
                <input asp-for="Password">
            <br>
            <br><span asp-validation-for="Confirm"></span><br>
            <label asp-for="Confirm"></label>
            <br>
                <input asp-for="Confirm">
            <br>
        </div>
    </div>
    <div class="row">
        <input value="Sign up Now!" type="submit"> 
    </div>
    </form>
</div>