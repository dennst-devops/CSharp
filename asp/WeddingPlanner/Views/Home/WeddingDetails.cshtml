@{
    ViewData["Title"] = "Wedding Planner Details";
}

@using WeddingPlanner.Models
@model WrapperViewModel

<div class="container">
    <div class="row">
        <div class="col-sm-8">
            <h2> @Model.OneWedding.WedderOne and @Model.OneWedding.WedderTwo's Wedding</h2>
        </div>
        <div class="col-sm-2">
            <a href="/Dashboard">Dashboard</a>
        </div>
        <div class="col-sm-2">
            <a href="logout">Log Out</a>
        </div>
    </div>
    <div class="row">
        Date: @Model.OneWedding.WeddingDate.Year-@Model.OneWedding.WeddingDate.Month-@Model.OneWedding.WeddingDate.Day
    </div>

        Guests: <br>
        @foreach(var g in Model.OneWedding.Guests)
        {
            <p>
                @g.User.FirstName
            </p>
        }


</div>