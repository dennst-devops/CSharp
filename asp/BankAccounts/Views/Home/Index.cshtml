@{
    ViewData["Title"] = "Register";
}

@using BankAccounts.Models
@model User
<br>
<div class="text-center">
    <h2>Register</h2>
</div>


<div class="container">
    <form asp-action="create" asp-controller="Home" method="post">
    <div class="row">
        <div class="col-sm-2">
            <span asp-validation-for="FirstName"></span><br>
            <label asp-for="FirstName"></label>
        </div>
        <div class="col-sm-3">
            <br>
            <input asp-for="FirstName">
        </div>
    </div>

    <div class="row">
        <div class="col-sm-2">
            <span asp-validation-for="LastName"></span><br>
            <label asp-for="LastName"></label>
        </div>
        <div class="col-sm-3">
            <br>
            <input asp-for="LastName">
        </div>
    </div>

    <div class="row">
        <div class="col-sm-2">
            <span asp-validation-for="Email"></span><br>
            <label asp-for="Email"></label>
        </div>
        <div class="col-sm-3">
            <br>
            <input asp-for="Email">
        </div>
    </div>

    <div class="row">
        <div class="col-sm-2">
            <span asp-validation-for="Password"></span><br>
            <label asp-for="Password"></label>
        </div>
        <div class="col-sm-3">
            <br>
            <input asp-for="Password">
        </div>
    </div>

    <div class="row">
        <div class="col-sm-2">
            <span asp-validation-for="Confirm"></span><br>
            <label asp-for="Confirm"></label>
        </div>
        <div class="col-sm-3">
            <br>
            <input asp-for="Confirm">
        </div>
    </div>

    <div class="row">
        <div class="col-sm-2">
            <br>
            <input value="Submit" type="submit"> 
        </div>
        <div class="col-sm-3">
            <div class="text-right">
                <br>
                <a href="/login">Already Registered?</a>
            </div>
        </div>
    </div>
    </form>
</div>
